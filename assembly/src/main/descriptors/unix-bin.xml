<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  
  <fileSets>
    <!-- Just the start scripts to fire up the benchmark JVM's -->
    <fileSet>
      <directory>src/main/scripts/linux</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    
    <!-- Include the tutorial samples -->
    <fileSet>
      <directory>../jmstester-core/src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Also include the documentation -->    
    <fileSet>
      <directory>../jmstester-core/target/site</directory>
      <outputDirectory>doc</outputDirectory>
    </fileSet>

    <!-- And finally the license -->    
    <fileSet>
      <directory>..</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>LICENSE</include>
      </includes>
    </fileSet>
  </fileSets>
  
  <!-- Copy all the dependencies to the archive -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>*:sigar</exclude>
        <exclude>*:rrd4j</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
