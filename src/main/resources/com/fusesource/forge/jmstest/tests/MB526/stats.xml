<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

  <bean id="RRDDatabase" class="com.fusesource.forge.jmstest.rrd.RRDController">
    <property name="fileName" value="target/Simple.rrd" />
  </bean>

  <bean id="ProducerMsgCounterRec" class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
    <property name="name" value="ProducerCountRecorder" />
    <property name="dsType" value="GAUGE" />
  </bean>

  <bean id="ProducerMsgCounter" class="com.fusesource.forge.jmstest.probe.CountingProbe" >
    <property name="name" value="ProducerMsgCounter" />
    <property name="dataConsumer" ref="ProducerMsgCounterRec" />
  </bean>
  
  <bean id="ProbeRunner" class="com.fusesource.forge.jmstest.probe.ProbeRunner"> 
    <property name="duration" value="30" />
    <property name="interval" value="3" />
  </bean>
</beans>