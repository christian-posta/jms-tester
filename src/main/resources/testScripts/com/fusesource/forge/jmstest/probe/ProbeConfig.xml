<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

  <bean id="RRDDatabase" class="com.fusesource.forge.jmstest.rrd.RRDController">
    <property name="fileName" value="target/Simple.rrd" />
  </bean>

  <bean id="Probe" class="com.fusesource.forge.jmstest.probe.RandomProbe" >
    <property name="name" value="RandomProbe1" />
    <property name="dataConsumer" >
      <bean id="RRDRecorder1" class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
        <property name="dsType" value="COUNTER" />
        <property name="controller" ref="RRDDatabase" />
     </bean>
    </property>
  </bean>
  
  <bean id="Probe2" class="com.fusesource.forge.jmstest.probe.RandomProbe" >
    <property name="name" value="RandomProbe2" />
    <property name="dataConsumer" >
      <bean class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
        <property name="dsType" value="COUNTER" />
        <property name="controller" ref="RRDDatabase" />
     </bean>
    </property>
  </bean> 

  <bean id="ProbeRunner" class="com.fusesource.forge.jmstest.probe.ProbeRunner"> 
    <property name="duration" value="30" />
    <property name="interval" value="3" />
    <property name="probes">
      <list>
        <ref bean="Probe"/>
        <ref bean="Probe2" />
      </list>
    </property>
  </bean>
</beans>