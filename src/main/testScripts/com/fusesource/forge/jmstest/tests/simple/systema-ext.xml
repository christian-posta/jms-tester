<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

  <bean id="connectorMap" class="java.util.Properties">
  </bean>
  
  <!-- A Connection provider is needed to establish the JMS Connections used by the test framework -->
  <bean id="connectionFactoryTemplate" class="org.apache.activemq.ActiveMQConnectionFactory" scope="prototype" >
  </bean> 

  <!-- A factory to create a connection provider -->  
  <bean id="connectionFactoryFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
    <property name="targetBeanName">
      <idref local="connectionFactoryTemplate" />
    </property>
  </bean>
</beans>
