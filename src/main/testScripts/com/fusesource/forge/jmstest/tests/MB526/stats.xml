<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

  <!--bean id="JMXConnector" class="com.fusesource.forge.jmstest.probe.jmx.JMXConnectionFactory" >
    <property name="url" value="service:jmx:rmi:///jndi/rmi://localhost:1099/jmxrmi" />
    <property name="username" value="smx" />
    <property name="password" value="smx" />
  </bean>
  
  <bean id="ProducerRRD" class="com.fusesource.forge.jmstest.rrd.FileSystemRRDController">
    <property name="fileName" value="target/MB526-Producer.rrd" />
    <property name="step" value="1" />
  </bean>

  <bean id="ConsumerRRD" class="com.fusesource.forge.jmstest.rrd.FileSystemRRDController">
    <property name="fileName" value="target/MB526-Consumer.rrd" />
    <property name="step" value="1" />
    <property name="autoStart" value="false" />
  </bean>

  <bean id="ProducerMsgCounter" class="com.fusesource.forge.jmstest.probe.CountingProbe" >
    <property name="name" value="ProducerMsgCounter" />
    <property name="dataConsumer" >
      <bean class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
        <property name="dsType" value="COUNTER" />
        <property name="controller" ref="ProducerRRD" />
      </bean>
    </property>
  </bean>
  
  <bean id="ThreadCounter" class="com.fusesource.forge.jmstest.probe.jmx.JMXProbe">
    <property name="jmxConnectionFactory" ref="JMXConnector" />
    <property name="name" value="ThreadCounter" />
    <property name="objectNameString" value="java.lang:type=Threading" />
    <property name="attributeName" value="ThreadCount" />
    <property name="dataConsumer">
      <bean class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
        <property name="dsType" value="GAUGE" />
        <property name="controller" ref="ProducerRRD" />
      </bean>
    </property>
  </bean>

  <bean id="CpuMonitor" class="com.fusesource.forge.jmstest.probe.sigar.CpuStat" >
    <property name="name" value="CpuMonitor" />
    <property name="dataConsumer">
      <bean class="com.fusesource.forge.jmstest.rrd.RRDRecorder">
        <property name="dsType" value="GAUGE" />
        <property name="controller" ref="ProducerRRD" />
      </bean>
    </property>
  </bean>
    
  <bean id="ProbeRunner" class="com.fusesource.forge.jmstest.probe.ProbeRunner"> 
    <property name="name" value="runner" />
	<property name="interval" value="1" />
    <property name="probes">
      <list>
        <ref bean="ProducerMsgCounter" />
        <ref bean="ThreadCounter" />
        <ref bean="CpuMonitor" />
      </list>
    </property>
  </bean>

  <bean id="ConsumerProbeRunner" class="com.fusesource.forge.jmstest.probe.ProbeRunner"> 
    <property name="name" value="ConsumerProbeRunner" />
	<property name="interval" value="1" />
  </bean>
  
  <bean id="GraphGenerator" class="com.fusesource.forge.jmstest.rrd.RRDGraphGenerator">
  	<property name="baseDir" value="target" />
  </bean -->
</beans>